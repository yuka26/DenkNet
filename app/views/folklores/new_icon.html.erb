<div class="container">
    <%= form_with(model: @folklore, url: {controller: 'folklores', action: 'new_confirm' }, local: true) do |f| %>
      <p>ここに写真</p>

      <%= f.hidden_field :email %>
      <%= f.hidden_field :password %>
      <%= f.hidden_field :user_name %>
      <%= f.hidden_field :furigana %>
      <input type="hidden" name="category" value="<%= @category %>">

      <%= f.submit "確認画面へ", class: "btn btn-primary" %>
    <% end %>
  </div>

  <div>
    <p>電話番号</p>
    <p>0000-00-0000</p>
  </div>
</div>