<div class="cover align-middle">
  <div class="container">
    <% if current_user != @user %>
      <% if current_user.requested?(@user.id, current_user.id) %>
        <p>相手が承諾するまでお待ちください。</p>

        <p><%= link_to "マイページへ戻る", user_path(current_user.id) %></p>
      <% else %>
        <%= form_with model: @matching, url: "/users/#{@user.id}/matchings", local:true do |f| %>
          <h4>申請メッセージ</h4>
          <%= f.text_field :message %>

          <%= f.submit '申請する' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
